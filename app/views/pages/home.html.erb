<div class= "container">
    <div class="row">
        <div class="jumbotron text-center">
            <h1>Just Start Engineering</h1>
            <h3>Disrupting education, one box at a time.</h3>
        </div>
    </div>
</div>

<div class= "container">
    <div class="row">
        <% if user_signed_in? %>
        <% else %>
            <div class="col-md-8 col-md-offset-2 jumbotron text-center">
                <img src="http://placehold.it/500x300">
                </br>
                <h3>Intro Video</h3>
            </div>
        <% end %>
    </div>
</div>

<div class= "container">    
    <div class="row">
        <% if user_signed_in? %>
           <div class="col-md-6">
               <div class="well">
                   <h2 class="text-center">Your Profile</h2>
                    <% if current_user.profile %>
                        <div class="text-center"><%= image_tag current_user.profile.avatar.url, class: "profile-picture" %></div></br>
                        <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block'%></br>
                        <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
                    <% else %>
                        <p class="text-center">Create your profile to join our community of educators and students.</p>
                        <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' if current_user %>
                    <% end %>
                </div>
            </div>
            <div class="col-md-6">
               <div class="well">
                   <h2 class="text-center">The Community</h2>
                   <div class="text-center"><%= image_tag "people.png", class: "community-picture" %></div></br>
                   <%= link_to "Visit the Community", users_path, class: 'btn btn-default btn-lg btn-block' %></br>
                   <%= link_to "Video Library", library_path, class: 'btn btn-default btn-lg btn-block' %>
                </div>
            </div>
        <% else %>
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Basic Membership</h2>
                    <h4>Signup for free and get access to the videos and community.</h4>
                    <br/>
                    <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
                </div>        
            </div>
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Pro Membership</h2>
                    <h4>Sign up for the pro account and get access to our packages.</h4>
                    <br/>
                    <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="container-fluid footer">
    <div class= "row">
        <div class = "credit">
            Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a>
        </div>
    </div>
</div>

