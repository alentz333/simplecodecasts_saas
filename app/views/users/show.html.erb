<div class= "row">
    <div class= "col-md-6 col-md-offset-3 text-center">
        <div class= "well">
            <%= image_tag @user.profile.avatar.url, class: "profile-picture" %>
            <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
            <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
            <p><%= @user.profile.description %></p>
            
            <% if true #current_user.plan_id == 2 %>
                <%= @user.profile.phone_number %></br>
                <%= @user.profile.contact_email %></br>
            <% end %>
        </div>
        
        <div class= "well">
            <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block'%>
            <%= link_to "Visit the Community", users_path, class: 'btn btn-default btn-lg btn-block' %>
        </div>
        
    </div>
</div>